<%- include('../partials/head.ejs') %> 
<%- include('../partials/homeNav.ejs') %>

<div class="container mt-4">
  <h2>Agregar Nuevo Stream de YouTube</h2>

  <form action="/youtube/agregar" method="POST" class="mt-4">
    <div class="row mb-3">
      <div class="col">
        <label for="nombre_stream" class="form-label">Nombre</label>
        <input
          type="text"
          name="nombre_stream"
          id="nombre_stream"
          class="form-control"
          required
        />
      </div>
      <div class="col">
        <label for="url_stream" class="form-label">URL</label>
        <input
          type="text"
          name="url_stream"
          id="url_stream"
          class="form-control"
          required
        />
      </div>
      <div class="col">
        <label for="id_canal" class="form-label">ID Canal</label>
        <input
          type="text"
          name="id_canal"
          id="id_canal"
          class="form-control"
          required
          readonly
        />
      </div>
    </div>

    <h4 class="mt-4">Datos de configuración de la medición</h4>
    <div class="row mb-3">
      <div class="col">
        <label for="fecha" class="form-label">Fecha Inicial</label>
        <input
          type="text"
          name="fecha"
          id="fecha"
          class="form-control datepicker"
          value="<%= fechaHoy %>"
          required
        />
      </div>
      <div class="col">
        <label for="fecha_final" class="form-label">Fecha Final</label>
        <input
          type="text"
          name="fecha_final"
          id="fecha_final"
          class="form-control datepicker"
        />
      </div>
      <div class="col">
        <label for="hora_comienzo_medicion" class="form-label">Hora Comienzo</label>
        <input
          type="text"
          name="hora_comienzo_medicion"
          id="hora_comienzo_medicion"
          class="form-control timepicker"
          value="<%= horaComienzo %>"
        />
      </div>
      <div class="col">
        <label for="hora_fin_medicion" class="form-label">Hora Fin</label>
        <input
          type="text"
          name="hora_fin_medicion"
          id="hora_fin_medicion"
          class="form-control timepicker"
          value="<%= horaFin %>"
        />
      </div>
      <div class="col">
        <label for="intervalo_medicion" class="form-label">Intervalo (minutos)</label>
        <input
          type="number"
          name="intervalo_medicion"
          id="intervalo_medicion"
          class="form-control"
          value="30"
          required
        />
      </div>
    </div>

    <!-- ✅ Checkbox para permitir usar las horas provistas por la API -->
    <div class="form-check mt-2">
      <input
        class="form-check-input"
        type="checkbox"
        value=""
        id="usar_horas_api"
        checked
      />
      <label class="form-check-label" for="usar_horas_api">
        Usar hora de comienzo y fin provistas por la API de YouTube (si están disponibles)
      </label>
    </div>

    <div class="d-flex gap-2 mt-3">
      <button type="submit" class="btn btn-primary">Agregar</button>
      <a href="/youtube" class="btn btn-warning">Volver</a>
    </div>
  </form>
</div>

<!-- ✅ Script para completar automáticamente el nombre del stream -->
<script src="../../public/autocompletarNombre.js" defer></script>



<%- include('../partials/foot.ejs') %> 


<!-- Flatpickr Date and Time Pickers -->
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
/>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

<script>
  flatpickr(".datepicker", {
    dateFormat: "d/m/Y",
    locale: "es",
  });

  flatpickr(".timepicker", {
    enableTime: true,
    noCalendar: true,
    dateFormat: "H:i",
    time_24hr: true,
    locale: "es",
  });

  // ✅ Extrae el ID del video de la URL de YouTube
  function extraerVideoID(url) {
    const regex =
      /(?:https?:\/\/)?(?:www\.)?(?:youtube\.com\/(?:watch\?v=|embed\/|v\/|shorts\/)|youtu\.be\/)([a-zA-Z0-9_-]{11})/;
    const match = url.match(regex);
    return match ? match[1] : null;
  }

  // ✅ Llama a la API de YouTube para obtener info del video
  async function obtenerInfoDesdeYoutube(videoID) {
    const apiKey =
      "<%= process.env.YOUTUBE_API_KEY || '' %>";
    const url = `https://www.googleapis.com/youtube/v3/videos?part=snippet,liveStreamingDetails&id=${videoID}&key=${apiKey}`;

    try {
      const response = await fetch(url);
      const data = await response.json();
      if (data.items && data.items.length > 0) {
        const item = data.items[0];
        return {
          idCanal: item.snippet.channelId,
          actualStartTime: item.liveStreamingDetails?.actualStartTime || null,
          actualEndTime: item.liveStreamingDetails?.actualEndTime || null,
        };
      }
    } catch (error) {
      console.error("Error al obtener datos desde la API de YouTube:", error);
    }

    return null;
  }

  // ✅ Extrae solo la hora en formato HH:mm desde ISO string
  function extraerHoraDeISO(iso) {
    if (!iso) return "";
    const hora = new Date(iso).toTimeString().split(":");
    return `${hora[0]}:${hora[1]}`;
  }

  // ✅ Maneja evento cuando se cambia la URL
  document.getElementById("url_stream").addEventListener("change", async function () {
    const url = this.value;
    const videoID = extraerVideoID(url);

    if (!videoID) {
      alert("⚠️ URL de video inválida.");
      document.getElementById("id_canal").removeAttribute("readonly");
      document.getElementById("id_canal").value = "";
      return;
    }

    const info = await obtenerInfoDesdeYoutube(videoID);

    if (info) {
      // ID canal
      if (info.idCanal) {
        document.getElementById("id_canal").value = info.idCanal;
      } else {
        alert("⚠️ No se pudo obtener el ID del canal. Ingréselo manualmente.");
        document.getElementById("id_canal").removeAttribute("readonly");
        document.getElementById("id_canal").value = "";
      }

      // ✅ Solo autocompleta horas si el checkbox está marcado
      const usarHorasAPI = document.getElementById("usar_horas_api");
      if (usarHorasAPI && usarHorasAPI.checked) {
        if (info.actualStartTime) {
          document.getElementById("hora_comienzo_medicion").value =
            extraerHoraDeISO(info.actualStartTime);
        }

        if (info.actualEndTime) {
          document.getElementById("hora_fin_medicion").value =
            extraerHoraDeISO(info.actualEndTime);
        }
      }
    }
  });
</script>
