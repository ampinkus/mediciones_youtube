<%- include('../partials/head.ejs') %> <%- include('../partials/homeNav.ejs') %>

<div class="container mt-4">
  <h2>Agregar Nuevo Stream de YouTube</h2>

  <form action="/youtube/agregar" method="POST" class="mt-4">
    <div class="row mb-3">
      <div class="col">
        <label for="nombre_stream" class="form-label">Nombre</label>
        <input
          type="text"
          name="nombre_stream"
          id="nombre_stream"
          class="form-control"
          required
        />
      </div>
      <div class="col">
        <label for="url_stream" class="form-label">URL</label>
        <input
          type="text"
          name="url_stream"
          id="url_stream"
          class="form-control"
          required
        />
      </div>
      <div class="col">
        <label for="id_canal" class="form-label">ID Canal</label>
        <input
          type="text"
          name="id_canal"
          id="id_canal"
          class="form-control"
          required
          readonly
        />
      </div>
    </div>

    <h4 class="mt-4">Datos de configuración de la medición</h4>
    <div class="row mb-3">
      <div class="col">
        <label for="fecha" class="form-label">Fecha Inicial</label>
        <input
          type="text"
          name="fecha"
          id="fecha"
          class="form-control datepicker"
          value="<%= fechaHoy %>"
          required
        />
      </div>
      <div class="col">
        <label for="fecha_final" class="form-label">Fecha Final</label>
        <input
          type="text"
          name="fecha_final"
          id="fecha_final"
          class="form-control datepicker"
        />
      </div>
      <div class="col">
        <label for="hora_comienzo_medicion" class="form-label"
          >Hora Comienzo</label
        >
        <input
          type="text"
          name="hora_comienzo_medicion"
          id="hora_comienzo_medicion"
          class="form-control timepicker"
          value="<%= horaComienzo %>"
        />
      </div>
      <div class="col">
        <label for="hora_fin_medicion" class="form-label">Hora Fin</label>
        <input
          type="text"
          name="hora_fin_medicion"
          id="hora_fin_medicion"
          class="form-control timepicker"
          value="<%= horaFin %>"
        />
      </div>
      <div class="col">
        <label for="intervalo_medicion" class="form-label"
          >Intervalo (minutos)</label
        >
        <input
          type="number"
          name="intervalo_medicion"
          id="intervalo_medicion"
          class="form-control"
          value="30"
          required
        />
      </div>
    </div>

    <!-- ✅ Checkbox para permitir usar las horas provistas por la API -->
    <div class="form-check mt-2">
      <input
        class="form-check-input"
        type="checkbox"
        value=""
        id="usar_horas_api"
        checked
      />
      <label class="form-check-label" for="usar_horas_api">
        Usar hora de comienzo y fin provistas por la API de YouTube (si están
        disponibles)
      </label>
    </div>
    <!--  ✅ Checkbox para elegir los días que se miden los streams-->
    <div class="mb-3">
      <label class="form-label">Días de medición</label><br />
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="dias_medicion"
          value="1"
          id="lunes"
        />
        <label class="form-check-label" for="lunes">Lun</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="dias_medicion"
          value="2"
          id="martes"
        />
        <label class="form-check-label" for="martes">Mar</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="dias_medicion"
          value="3"
          id="miercoles"
        />
        <label class="form-check-label" for="miercoles">Mié</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="dias_medicion"
          value="4"
          id="jueves"
        />
        <label class="form-check-label" for="jueves">Jue</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="dias_medicion"
          value="5"
          id="viernes"
        />
        <label class="form-check-label" for="viernes">Vie</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="dias_medicion"
          value="6"
          id="sabado"
        />
        <label class="form-check-label" for="sabado">Sáb</label>
      </div>
      <div class="form-check form-check-inline">
        <input
          class="form-check-input"
          type="checkbox"
          name="dias_medicion"
          value="7"
          id="domingo"
        />
        <label class="form-check-label" for="domingo">Dom</label>
      </div>
    </div>

    <div class="d-flex gap-2 mt-3">
      <button type="submit" class="btn btn-primary">Agregar</button>
      <a href="/youtube" class="btn btn-warning">Volver</a>
    </div>
  </form>
</div>

