<!-- 
  @file head.ejs
  @description Cabecera HTML común para las páginas del sistema de medición de redes sociales.
  Incluye configuración de metadatos, estilos de Bootstrap, íconos, favicon y DataTables.
  Este archivo debe ser incluido con EJS como plantilla parcial (head).
-->

<!-- Head de la página de inicio -->
<html lang="es">
  <head>
    <!-- Codificación de caracteres -->
    <meta charset="utf-8" />

    <!-- Escalado responsive -->
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Título de la pestaña del navegador -->
    <title>Medicion Redes Sociales</title>

    <!-- Bootstrap CSS desde node_modules -->
    <link
      rel="stylesheet"
      href="/node_modules/bootstrap/dist/css/bootstrap.min.css"
    />

    <!-- Bootstrap Icons desde node_modules -->
    <link
      rel="stylesheet"
      href="/node_modules/bootstrap-icons/font/bootstrap-icons.css"
    />

    <!-- Estilos personalizados del proyecto -->
    <link rel="stylesheet" href="/public/styles.css" />

    <!-- Favicon del sitio -->
    <link rel="icon" href="/public/icons8-favicon-32.png" type="image/x-icon" />

    <!-- DataTables CSS desde CDN con extensiones:
         - JSZip (para exportación a Excel)
         - Buttons (para imprimir/exportar)
         - ColVis (para mostrar/ocultar columnas)
         - ColReorder (reordenar columnas)
         - FixedHeader
         - RowGroup
    -->
    <!-- 
    Versión alternativa comentada:
    <link href="https://cdn.datatables.net/v/bs5/jszip-3.10.1/dt-2.1.8/b-3.1.2/b-colvis-3.1.2/b-html5-3.1.2/b-print-3.1.2/cr-2.0.4/fh-4.0.1/rr-1.5.0/datatables.min.css" rel="stylesheet">
    -->
